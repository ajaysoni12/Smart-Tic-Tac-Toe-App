<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_on_primary_emphasis_medium</item>
        <item name="colorPrimaryVariant">@color/material_on_primary_emphasis_medium</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_on_primary_emphasis_medium</item>
        <item name="colorSecondaryVariant">@color/material_on_primary_emphasis_medium</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/material_on_primary_emphasis_medium</item>
        <item name="colorPrimaryVariant">@color/material_on_primary_emphasis_medium</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>